<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="FullScreen" parent="Theme.AppCompat.NoActionBar">


    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#4dd0e1</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#388e3c</item>
        <item name="android:windowTitleStyle">@style/MyTitleTextStyle</item>

    </style>


    <style name="MyTitleTextStyle">
        <item name="android:textColor">#448aff</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AnimatedDiag" parent="@android:style/Theme.Dialog">
        <item name="android:background">#fff</item>
        <item name="android:textColorPrimary">#1a1a1c</item>

        <item name="android:windowAnimationStyle">@style/AnimatedDiagAnimation</item>
    </style>

    <style name="AnimatedDiagAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="FullScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FullScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="@style/Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/red_500</item>
        <item name="colorControlActivated">@color/grey_500</item>
    </style>

</resources>
