<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tour_packages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.hoptec.exploman.TourPackages">

    <me.kaelaela.verticalviewpager.VerticalViewPager
        android:id="@+id/vertical_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <com.wang.avi.AVLoadingIndicatorView
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/splash_view2"
        android:layout_gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AVLoadingIndicatorView"
        android:visibility="visible"
        app:indicatorName="LineScalePartyIndicator"
        app:indicatorColor="@color/red_700"
        />













</RelativeLayout>
