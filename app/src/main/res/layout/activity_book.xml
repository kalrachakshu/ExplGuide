<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"                xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"  >


    <ScrollView
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/slot1"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />




            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/slot2"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />



            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/slot3"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />



            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />



            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/email"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />


            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/phone"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />



            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/more"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />


            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/categ"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />



            <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="avenir-next-regular"
                android:background="@drawable/rounded_rect_search_background"
                android:textColor="@color/grey_800"
                android:text=""
                android:id="@+id/level"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:layout_width="match_parent" />



        </LinearLayout>








    </ScrollView>
    <Button
        android:transitionName="@string/activity_image_trans"
        android:text="PAY"
        android:id="@+id/pay"
        android:layout_weight="0.1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
