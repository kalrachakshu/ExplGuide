<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_account"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="10.3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/cont"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="5"
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/bg"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/txt">


                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:id="@+id/pv"
                        android:text=" \nPlace Visits"
                        android:background="@drawable/rounded_selector"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/black"
                        android:padding="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.3"
                        app:font="Avenir-Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:id="@+id/po"
                        android:text=" \nPopular"
                        android:background="@drawable/rounded_selector"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/black"
                        android:padding="3dp" android:gravity="center"
                        android:layout_weight="0.3"
                        app:font="Avenir-Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:id="@+id/fr"
                        android:text=" \nFriends"
                        android:background="@drawable/rounded_selector"

                        android:layout_weight="0.3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/black"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        app:font="Avenir-Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/headd"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="42dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/txt"
                    android:layout_centerHorizontal="true">

                    <in.hoptec.exploman.views.RoundedImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/user"
                        android:id="@+id/dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />


                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:id="@+id/name"
                        android:layout_marginTop="5dp"
                        android:textSize="17sp"
                        android:text=""
                        android:textColor="@color/black"
                        app:font="Avenir-Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:id="@+id/age"
                        android:textSize="15sp"
                        android:text=""
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black"
                        app:font="Avenir-Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:id="@+id/sub"
                        android:textSize="15sp"
                        android:text=""
                        android:textColor="@color/black"
                        app:font="Avenir-Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_weight="5.3"
                android:weightSum="5.6"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.daniribalbert.customfontlib.views.CustomFontTextView
                    android:text="Photos"
                    android:layout_weight="0.6"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"

                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    app:font="Avenir-Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />


                <LinearLayout
                    android:layout_weight="1.85"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <in.hoptec.exploman.views.RoundedImageView


                        android:scaleType="centerCrop"
                        android:id="@+id/pic1"

                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.3333"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <in.hoptec.exploman.views.RoundedImageView
                        android:scaleType="centerCrop"

                        android:id="@+id/pic2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        android:layout_weight="0.3333"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <in.hoptec.exploman.views.RoundedImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/pic3"
                        android:layout_marginRight="20dp"

                        android:layout_weight="0.3333"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="1"
                    android:orientation="vertical"
                    android:layout_weight="1.2"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:text="Work"
                        android:layout_weight="0.4"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        app:font="Avenir-Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" />


                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:text=""
                        android:id="@+id/work"
                        android:textColor="@color/black"
                        android:layout_weight="0.6"
                        android:layout_marginRight="8dp"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        app:font="avenir-next-regular"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                    <View
                        android:layout_marginLeft="1dp"
                        android:background="@color/grey_600"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">



                    <LinearLayout
                        android:layout_weight="0.9"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <com.daniribalbert.customfontlib.views.CustomFontTextView
                            android:text="Private Account"
                            android:layout_gravity="left|center_horizontal"
                            android:gravity="left|center_horizontal"
                            android:textSize="17sp"
                            android:textColor="@color/black"

                            android:layout_marginLeft="3dp"
                            app:font="Avenir-Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/pvt"
                            android:layout_alignParentLeft="true" />

                        <com.daniribalbert.customfontlib.views.CustomFontTextView
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.4"
                            android:textColor="@color/grey_500"
                            android:text="Add privacy for adding Friend Request ."
                            android:layout_margin="3dp"

                            android:gravity="center"
                            app:font="avenir-next-regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_gravity="right|center_horizontal"
                        android:gravity="right|center_horizontal"
                        android:id="@+id/pvt"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />


                </LinearLayout>



                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"
                    android:background="@color/grey_600"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1.2"
                    android:orientation="horizontal"
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_gravity="top"
                    android:gravity="right"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_height="0dp">
                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="3dp"
                        android:gravity="left"
                        app:font="Avenir-Medium"

                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"  />


                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:text="Done"
                        android:layout_marginLeft="3dp"
                        android:gravity="top"
                        android:layout_weight="0.5"
                        android:background="@color/green_400"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:id="@+id/done"
                        app:font="Avenir-Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"  />

                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_height="match_parent" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>